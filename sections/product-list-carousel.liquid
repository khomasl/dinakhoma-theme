<section id="section" class="main-container shopify-section ">
  123
  <div class="section-wrapper w-full flex gap-5 items-center pb-5 lg:pb-0">
    {% render 'slider-arrow', direction: 'left', action: 'previous', navigation: 'product-swiper-button-prev' %}
    <div class="swiper w-full aspect-[0.8] ss:aspect-[1] sx:aspect-[1.4] sm:aspect-[2.2] md:aspect-[2.5] xl:aspect-[4]">
      <div class="swiper-wrapper">
        {% comment %}
          {% for block in section.blocks %}
            {% render 'product-card', children: block.settings, product: block.settings[0] %}
          {% endfor %}
        {% endcomment %}
      </div>
    </div>

    {% render 'slider-arrow', direction: 'right', action: 'next', navigation: 'product-swiper-button-next' %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.swiper', {
      spaceBetween: 50,
      slidesPerView: 1,
      loop: true,
      breakpoints: {
        760: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 3,
        },
      },
      navigation: {
        nextEl: '.product-swiper-button-next',
        prevEl: '.product-swiper-button-prev',
      },
    });
  });
</script>

{% schema %}
{
  "name": "Product List Carousel",
  "tag": "section",
  "class": "shopify-section section-wrapper",
  //"type": "section",

  "settings": [],
  "blocks": [
    {
      "type": "product-card",
      "name": "t:names.product_card",
      "settings": []
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Product List Carousel"
      //"category": "Custom"
    }
  ]
}
{% endschema %}
