
<section id="feedbacks" class="main-container bg-violet-400 text-white font-manrope text-center lg:text-left flex items-center justify-center flex-col">
    <p class="font-bold">{{ section.settings.header }}</p>
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-10 mt-4 max-w-2/3 mx-auto lg:mx-0">
        {{ section.settings.title }}
    </h1>

    <div class="w-full flex gap-5 items-center">
        <button class="swiper-button-prev shrink-0" aria-label="Previous"></button>

        <div class="swiper w-full aspect-[0.5] ss:aspect-[0.8] sx:aspect-[1.4] sm:aspect-[2.2] md:aspect-[2.5] xl:aspect-[4]">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    <div class="swiper-slide p-4">
                        {% render 'feedback-card', feedback: block.settings %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <button class="swiper-button-next shrink-0" aria-label="Next"></button>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.swiper', {
            spaceBetween: 50,
            slidesPerView: 1,
            breakpoints: {
                760: {
                    slidesPerView: 2
                },
                1024: {
                    slidesPerView: 3
                }
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev'
            }
        });
    });
</script>

{% schema %}
{
  "name": "Feedback Section",
  "tag": "section",
  "class": "feedback-section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Customer Feedback"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title1231421321",
      "default": "What our clients say"
    }
  ],
  "blocks": [
    {
      "type": "feedback",
      "name": "Feedback",
      "settings": [
        {
          "type": "image_picker",
          "id": "src",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Feedback text",
          "default": "Great service and product quality!"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Feedback Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
