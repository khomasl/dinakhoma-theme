

<div class="flex flex-col items-center w-full h-full bg-white text-gray-900 px-4 py-6 rounded-xl">
    <div class="relative w-14 aspect-square overflow-hidden rounded-full shrink-0">
        {% if feedback.src != blank %}
            <img
                    src="{{ feedback.src | image_url }}"
                    alt="{{ feedback.name | escape }}"
                    class="object-cover w-full h-full rounded-full"
                    loading="lazy"
            />
        {% else %}
            <img
                    src="{{ 'no-avatar.png' | asset_url }}"
                    alt="No avatar"
                    class="object-cover w-full h-full rounded-full"
                    loading="lazy"
            />
        {% endif %}
    </div>

    <p class="text-violet-400 text-sm mt-3 mb-3">
        {{ feedback.name }}
    </p>

    <div class="w-full border border-b-violet-400 mb-3"></div>

    <p class="line-clamp-12 text-center text-sm md:text-base px-3 overflow-y-auto">
        {{ feedback.quote }}
    </p>
</div>
